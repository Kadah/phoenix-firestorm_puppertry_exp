    <tab_container
     top="50"
     bottom="-5"
     left="4"
     right="-4"
     layout="topleft"
     follows="all"
     halign="left"
     name="tab_picks"
     use_ellipses="true"
     tab_position="left" />

    <text
     top="55"
     left="20"
     height="100"
     right="-20"
     wrap="true"
     layout="topleft"
     follows="left|top|right"
     name="picks_panel_text"
     mouse_opaque="false">
        Loading...
    </text>

</panel>
