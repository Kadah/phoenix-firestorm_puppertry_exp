<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 top="0"
 left="0"
 width="420"
 height="480"
 layout="topleft"
 follows="all"
 name="panel_picks"
 label="Picks">
 <string
  name="no_picks"
  value="No Picks" />
 <string
  name="no_classifieds"
  value="No Classifieds" />

    <loading_indicator
     top="20"
     right="-10"
     height="23"
     width="23"
     layout="topleft"
     follows="top|right"
     name="progress_indicator"
     visible="false" />

    <text
     top="5"
     left="5"
     height="16"
     right="-5"
     layout="topleft"
     follows="left|top|right"
     halign="center"
     name="Tell everyone about your favorite places in Second Life.">
        Tell everyone about your favorite places in [GRID].
    </text>

    <button
     top_pad="4"
     left="5"
     height="20"
     width="70"
     layout="topleft"
     follows="left|top"
     name="new_btn"
     label="New..."
     visible="false"
     enabled="false" />
    <button
     left_pad="5"
     height="20"
     width="70"
     layout="topleft"
     follows="left|top"
     name="delete_btn"
     label="Delete..."
     visible="false"
     enabled="false" />
