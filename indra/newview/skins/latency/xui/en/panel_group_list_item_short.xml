<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 background_visible="true"
 background_opaque="true"
 bg_opaque_color="ScrollBgWriteableColor"
 follows="top|right|left"
 height="16"
 layout="topleft"
 left="0"
 name="group_list_item"
 top="0"
 width="320">
    <icon
     follows="top|right|left"
     height="16"
     image_name="ListItem_Over"
     layout="topleft"
     left="0"
     name="hovered_icon"
     top="0"
     visible="false"
     width="320" />
    <icon
     height="16"
     follows="top|right|left"
     image_name="ListItem_Select"
     layout="topleft"
     left="0"
     name="selected_icon"
     top="0"
     visible="false"
     width="320" />
    <group_icon
     height="14"
     image_name="Generic_Group"
     name="group_icon"
     mouse_opaque="true"
     left="5"
     top="2"
     use_draw_context_alpha="false"
     width="14" />
   <text
     text_color="ScrollUnselectedColor"
     parse_urls="false"
     follows="left|right"
     height="16"
     layout="topleft"
     left_pad="5"
     name="group_name"
     top="0"
     use_ellipses="true"
     value="Unknown"
     right="-2" />

<!--
    We don't want the "hover buttons" to appear, since they only waste space
    and their function is redundant

    <button
     follows="right"
     height="16"
     image_pressed="Info_Press"
     image_unselected="Info_Over"
     left_pad="3"
     right="-31"
     name="info_btn"
     tab_stop="false"
     top_delta="-2"
     width="16" />

    <button
     follows="right"
     height="20"
     image_overlay="ForwardArrow_Off"
     layout="topleft"
     left_pad="5"
     right="-3"
     name="profile_btn"
     tab_stop="false"
     tool_tip="View profile"
     top_delta="-2"
     width="20" />
-->
</panel>
